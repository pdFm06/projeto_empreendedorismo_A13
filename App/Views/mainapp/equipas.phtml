<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Equipas — Projeto Empreendedorismo</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="container py-4">
      <!-- PAGE HEADER -->
      <div class="page-header">
        <h1>Equipas</h1>
        <p class="subtitle">Supervisione as suas equipas</p>
      </div>

      <!-- NOVA EQUIPA -->
      <div class="mb-4">
        <button
          class="btn btn-primary custom"
          data-bs-toggle="modal"
          data-bs-target="#createTeamModal"
        >
          + Nova Equipa
        </button>
      </div>

      <!-- Sitio Equipass -->
      <div class="row g-4 mb-5" id="teamsGrid"></div>

      <!-- MODAL CRIAR EQUIPA -->
      <div class="modal fade" id="createTeamModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Criar Nova Equipa</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>

            <div class="modal-body">
              <form id="teamForm">
                <div class="mb-3">
                  <label for="teamName">Nome da Equipa</label>
                  <input
                    type="text"
                    id="teamName"
                    class="form-control"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="teamLeader">Chefe da Equipa</label>
                  <select id="teamLeader" class="form-control" required>
                    <option value="">Selecione um Chefe</option>
                  </select>
                </div>

                <div class="mb-3">
                  <label for="teamDescription">Descrição</label>
                  <textarea
                    id="teamDescription"
                    class="form-control"
                    rows="3"
                  ></textarea>
                </div>
              </form>
            </div>

            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">
                Cancelar
              </button>
              <button class="btn btn-primary" id="createTeamButton">
                Criar Equipa
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- MODAL ADICIONAR MEMBRO -->
      <div class="modal fade" id="addMemberModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addMemberModalLabel">
                Adicionar Membro
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>

            <div class="modal-body">
              <form id="memberForm">
                <div class="mb-3">
                  <label for="memberSelect">Selecione um Membro</label>
                  <select id="memberSelect" class="form-control" required>
                    <option value="">Selecione um membro</option>
                  </select>
                </div>

                <div class="mb-3">
                  <label for="memberRole">Função</label>
                  <input
                    type="text"
                    id="memberRole"
                    class="form-control"
                    required
                  />
                </div>
              </form>
            </div>

            <div class="modal-footer">
              <button class="btn btn-secondary" data-bs-dismiss="modal">
                Cancelar
              </button>
              <button class="btn btn-primary" id="addMemberButton">
                Adicionar
              </button>
            </div>
          </div>
        </div>
      </div>

      <footer class="mt-4">
        © <span id="year"></span> Projeto Empreendedorismo — ISCTE · Grupo A13
      </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SCRIPT -->
    <script>
      document.getElementById("year").textContent = new Date().getFullYear();

      // ⚠️ AQUI VAI VIR A TUA BASE DE DADOS (ex: fetch para API)
      const people = [
        { id: 1, name: "João Silva", email: "joao.silva@iscte.pt" },
      ]; // <- VAI SER SUBSTITUÍDO

      let teams = [];
      let currentTeamIndex = null;

      // -------------------------
      //  LÓGICA DE EQUIPAS
      // -------------------------

      function populateLeadersSelect() {
        const select = document.getElementById("teamLeader");
        select.innerHTML = '<option value="">Selecione um líder</option>';

        people.forEach((p) => {
          const opt = document.createElement("option");
          opt.value = p.id;
          opt.textContent = p.name;
          select.appendChild(opt);
        });
      }

      function populateMembersSelect() {
        const select = document.getElementById("memberSelect");
        select.innerHTML = '<option value="">Selecione um membro</option>';

        const addedIds = teams[currentTeamIndex].members.map((m) => m.id);

        people.forEach((p) => {
          if (!addedIds.includes(p.id)) {
            const opt = document.createElement("option");
            opt.value = p.id;
            opt.textContent = p.name;
            select.appendChild(opt);
          }
        });
      }

      document
        .getElementById("createTeamButton")
        .addEventListener("click", () => {
          const name = document.getElementById("teamName").value;
          const leaderId = parseInt(
            document.getElementById("teamLeader").value,
          );
          const desc = document.getElementById("teamDescription").value;

          const leader = people.find((p) => p.id === leaderId);
          if (!leader) return alert("Selecione um líder");

          teams.push({
            name,
            leader: leader.name,
            leaderId,
            description: desc,
            members: [],
          });

          renderTeams();

          bootstrap.Modal.getInstance(
            document.getElementById("createTeamModal"),
          ).hide();
          document.getElementById("teamForm").reset();
        });

      document
        .getElementById("addMemberButton")
        .addEventListener("click", () => {
          const id = parseInt(document.getElementById("memberSelect").value);
          const role = document.getElementById("memberRole").value;

          const person = people.find((p) => p.id === id);
          if (!person) return alert("Selecione um membro");

          teams[currentTeamIndex].members.push({
            id: person.id,
            name: person.name,
            role,
          });

          renderTeams();

          bootstrap.Modal.getInstance(
            document.getElementById("addMemberModal"),
          ).hide();
          document.getElementById("memberForm").reset();
        });

      function renderTeams() {
        const grid = document.getElementById("teamsGrid");
        grid.innerHTML = "";

        teams.forEach((t, i) => {
          grid.insertAdjacentHTML(
            "beforeend",
            `
          <div class="col-md-6 col-lg-4">
            <div class="project-card team-card">
              <h3>${t.name}</h3>
              <p><strong>Líder:</strong> ${t.leader}</p>
              <p><strong>Membros:</strong> ${t.members.length}</p>
              <p>${t.description || "Sem descrição"}</p>
              <div>
                ${t.members.map((m) => `<div class="member-badge">${m.name} (${m.role})</div>`).join("")}
              </div>
              <button class="view-btn mt-3" onclick="openAddMemberModal(${i})">+ Adicionar Membro</button>
            </div>
          </div>
        `,
          );
        });
      }

      function openAddMemberModal(i) {
        currentTeamIndex = i;
        populateMembersSelect();
        new bootstrap.Modal(document.getElementById("addMemberModal")).show();
      }

      // Inicialização
      populateLeadersSelect();
    </script>
  </body>
</html>
